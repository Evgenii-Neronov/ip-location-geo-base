<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <script src="~/lib/jquery/jquery-3.5.1.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
</head>

<body>
<div class="content">
    <div class="card">
        <div class="card-header">
            GeoBase
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-3">
                    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                        <a class="nav-link active" id="search-by-ip-tab" data-toggle="pill" href="#search-by-ip" role="tab" aria-controls="search-by-ip" aria-selected="true">
                            Поиск гео-информации по IP
                        </a>
                        <a class="nav-link" id="search-by-city-tab" data-toggle="pill" href="#search-by-city" role="tab" aria-controls="search-by-city" aria-selected="false">
                            Поиск списка местоположений по названию города
                        </a>
                    </div>
                </div>
                <div class="col-9">
                    <div class="tab-content" id="v-pills-tabContent">
                        <div class="tab-pane fade show active" id="search-by-ip" role="tabpanel" aria-labelledby="search-by-ip-tab">

                            @await Html.PartialAsync("SearchByIp")


                        </div>
                        <div class="tab-pane fade" id="search-by-city" role="tabpanel" aria-labelledby="search-by-city-tab">

                            @await Html.PartialAsync("SearchByCity")

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>